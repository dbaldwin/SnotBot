<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.unmannedairlines.snotbot.MainActivity">

    <dji.ux.widget.FPVWidget
        android:id="@+id/FPVWidget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/xatt"
        android:layout_width="43dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="xAtt"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_20_in_sw320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FPVWidget" />

    <TextView
        android:id="@+id/yatt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="yAtt"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_20_in_sw320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xatt" />

    <TextView
        android:id="@+id/zatt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="zAtt"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_20_in_sw320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yatt" />

    <!--<dji.ux.widget.FPVOverlayWidget
        android:layout_width="576dp"
        android:layout_height="209dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="94dp" />-->

</android.support.constraint.ConstraintLayout>
